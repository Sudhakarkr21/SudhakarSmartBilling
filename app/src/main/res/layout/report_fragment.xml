<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp96"
        android:layout_marginTop="@dimen/dp30">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_billing_report"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp8"
            android:layout_marginEnd="@dimen/dp8"
            android:layout_weight="1"
            android:elevation="@dimen/dp4"
            android:foreground="?android:selectableItemBackground"
            app:cardCornerRadius="@dimen/dp8"
            app:cardBackgroundColor="@color/white_blue">

            <TextView
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp4"
                android:layout_marginBottom="@dimen/dp4"
                android:gravity="center"
                android:text="@string/billing_report"
                android:textSize="@dimen/text16" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp96"
        android:layout_marginTop="@dimen/dp4">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_tarrifwise_report"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp8"
            android:layout_marginEnd="@dimen/dp8"
            android:elevation="@dimen/dp4"
            android:foreground="?android:selectableItemBackground"
            app:cardCornerRadius="@dimen/dp8"
            app:cardBackgroundColor="@color/white_blue">

            <TextView
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp4"
                android:layout_marginBottom="@dimen/dp4"
                android:gravity="center"
                android:text="@string/tarrifwise_report"
                android:textSize="@dimen/text16" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp96"
        android:layout_marginTop="@dimen/dp4">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_bulk_billing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp8"
            android:layout_marginEnd="@dimen/dp8"
            android:elevation="@dimen/dp4"
            android:foreground="?android:selectableItemBackground"
            app:cardCornerRadius="@dimen/dp8"
            app:cardBackgroundColor="@color/white_blue">

            <TextView
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp4"
                android:layout_marginBottom="@dimen/dp4"
                android:gravity="center"
                android:text="@string/arrears_report"
                android:textSize="@dimen/text16" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp96"
        android:layout_marginTop="@dimen/dp4">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_check_billed_unbilled"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp8"
            android:layout_marginEnd="@dimen/dp8"
            android:elevation="@dimen/dp4"
            android:foreground="?android:selectableItemBackground"
            app:cardCornerRadius="@dimen/dp8"
            app:cardBackgroundColor="@color/white_blue">

            <TextView
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp4"
                android:layout_marginBottom="@dimen/dp4"
                android:gravity="center"
                android:text="@string/arrears_report"
                android:textSize="@dimen/text16" />
        </android.support.v7.widget.CardView>
    </LinearLayout>


</LinearLayout>